#include <iostream>
#include <fstream> 
#include<string>
using namespace std;

class Person
{
public:
    char m_name[64];
    int m_age;
};
void test01()
{
    ifstream ifs;
    ifs.open("person.txt", ios::in | ios::binary);
    Person p;
    if (!ifs.is_open())
    {
        cout << "false" << endl;
        return;
    }
   ifs.read((char*)&p, sizeof(p));
   cout << "name" << p.m_name << "age" << p.m_age;
    ifs.close();
}
             
int main()
{
    test01();
    system("pause");
    return 0;

}
